{
  "name": "jakublech/transformer",
  "type": "library",
  "description": "Simply converts classes to other classes or formats",
  "keywords": [
    "transform",
    "mapping",
    "serializer"
  ],
  "homepage": "https://github.com/jakublech/transformer",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Jakub Lech",
      "email": "info@smartbyte.pl"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.3",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.12"
  },
  "autoload": {
    "psr-4": {
      "JakubLech\\Transformer\\": "src/"
    },
    "exclude-from-classmap": [
      "tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "JakubLech\\Transformer\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:cs-fixer": "vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php --dry-run --diff --allow-risky=yes",
    "test:unit": "vendor/bin/phpunit --bootstrap ./tests/bootstrap.php  ./tests/",
    "fix:static": "vendor/bin/php-cs-fixer fix --config=php-cs-fixer.php --diff --allow-risky=yes",
    "analyze": "vendor/bin/phpstan analyse src --level=max"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "support": {
    "issues": "https://github.com/jakublech/transformer/issues",
    "source": "https://github.com/jakublech/transformer"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "prefer-stable": true,
  "minimum-stability": "stable"
}
